{
    "name": "kasouza/craftsman",
    "description": "A set of utilities to manage your project, aka poor man's artisan",
    "license": "MIT",
    "require": {
        "php": "^8.0"
    },
    "scripts": {
      "build": "@php vendor/bin/phar-composer build"
    },

    "autoload": {
        "psr-4": {
            "Craftsman\\": "src/"
        }, 
        "files": [
            "src/config.php",
            "src/helpers.php"
        ]
    },
    "bin": [ "bin/craftsman" ],
    "require-dev": {
        "clue/phar-composer": "^1.4"
    }
}
